---
import Layout from '@/layouts/Layout.astro';
import HomeArticles from '@/components/HomeArticles.astro';
import About from '@/components/About.astro';

import { Image } from '@astrojs/image/components';
import Icon from 'astro-icon';
import HeroImage from '@/assets/images/David D Lawson Profile.png';
---

<Layout title="David D Lawson">
  <section class="overflow-hidden bg-white dark:bg-slate-900 dark:text-white">
    <div class="container relative mx-auto px-4 py-6 lg:px-8 xl:max-w-7xl">
