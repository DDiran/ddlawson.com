---
import Layout from '../layouts/Layout.astro';

import {Image} from '@astrojs/image/components'
import HeroImage from '../assets/images/David D Lawson Profile.png'
---

<Layout title="David D Lawson">
<div class="bg-white overflow-hidden">
    <div class="container xl:max-w-7xl mx-auto px-4 py-16 lg:px-8 lg:py-28">
      <div class="text-center">
        <div class="relative mx-auto w-64 mb-14">
          <div class="absolute inset-0 rounded-xl bg-primary-100 bg-opacity-50 -m-4 transform rotate-2"></div>
          <div class="absolute inset-0 rounded-xl bg-primary-200 bg-opacity-50 -m-4 transform -rotate-2"></div>
          <Image src={HeroImage} alt="David D Lawson Profile Image" class="relative rounded-lg mx-auto shadow-lg" />
        </div>
        <!-- <div class="font-semibold inline-flex px-2 py-1 leading-4 mb-2 text-sm rounded text-gray-700 bg-gray-200">
          v2.0 Latest Version
        </div> -->
        <h1 class="text-3xl md:text-4xl font-extrabold mb-4">
          Hey, I'm <span class="text-primary-600">David D Lawson</span>
        </h1>
        <h2 class="text-lg md:text-xl md:leading-relaxed font-medium text-slate-800 lg:w-2/3 mx-auto">
          I believe every problem presents an opportunity.<br />
I'm a <strong>Customer Experience</strong> professional, specialized in SaaS with a passion for technology. Currently helping secure the world's software @ <a class="text-primary-400" href="https://www.veracode.com">Veracode</a>
        </h2>
      </div>
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-center space-y-2 sm:space-y-0 sm:space-x-2 pt-10 pb-16">
        <a href="javascript:void(0)" class="inline-flex justify-center items-center space-x-2 border font-semibold focus:outline-none px-6 py-4 leading-6 rounded border-primary-700 bg-primary-700 text-white hover:text-white hover:bg-primary-800 hover:border-primary-800 focus:ring focus:ring-primary-500 focus:ring-opacity-50 active:bg-primary-700 active:border-primary-700">
          <svg fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" class="opacity-50 hi-solid hi-download inline-block w-5 h-5"><path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
          <span>Read More</span>
        </a>
        <a href="javascript:void(0)" class="inline-flex justify-center items-center space-x-2 border font-semibold focus:outline-none px-6 py-4 leading-6 rounded border-gray-300 bg-white text-gray-800 shadow-sm hover:text-gray-800 hover:bg-gray-100 hover:border-gray-300 hover:shadow focus:ring focus:ring-gray-500 focus:ring-opacity-25 active:bg-white active:border-white active:shadow-none">
          <span>Learn more</span>
        </a>
      </div>
    </div>
    <!-- END Hero Content -->
  </div>
  <!-- END Hero Section: Centered With Simple Header -->
</Layout>
