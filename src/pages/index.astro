        class="absolute top-12 -left-12 h-48 w-64 -translate-y-12 -translate-x-16 -rotate-3 transform text-slate-300 pattern-dots-xl dark:text-slate-700 md:h-96"
      >
      </div>
      <div
        class="absolute bottom-0 right-0 h-44 w-32 translate-y-12 translate-x-16 rotate-3 transform text-slate-300 pattern-dots-xl dark:text-slate-700 md:-right-10 md:h-96"
      >
      </div>
      <div class="text-center">
        <div class="relative mx-auto mb-14 w-64">
          <div
            class="absolute inset-0 -m-4 rotate-2 transform rounded-xl bg-primary-100 bg-opacity-50 dark:bg-primary-600"
          >
          </div>
          <div
            class="absolute inset-0 -m-4 -rotate-2 transform rounded-xl bg-primary-200 bg-opacity-50 dark:bg-primary-700"
          >
          </div>
          <Image src={HeroImage} alt="David D Lawson Profile Image" class="relative rounded-lg mx-auto shadow-lg" />
        </div>
        <!-- <div class="font-semibold inline-flex px-2 py-1 leading-4 mb-2 text-sm rounded text-gray-700 bg-gray-200">
          v2.0 Latest Version
        </div> -->
