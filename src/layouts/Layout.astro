---
import BasicScripts from '@/components/BasicScripts.astro';
import Header from '@/components/Header.astro';
import { SITE } from '@/config.mjs';
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- meta description -->
    <meta name="description" content={SITE.description} />
    <script
      async
      defer
      data-website-id="a42e4c62-cd7c-48db-84c7-037290ac367c"
      src="https://analytics.ddlawson.com/umami.js"
    ></script>
  </>
  <body class="min-h-full bg-white antialiased transition-colors duration-500 dark:bg-slate-900 dark:text-white">
    <a href="#main" class="skip-to-main-content">Skip to main content</a>
    <Header />
    <main class="" id="main">
      <slot />
    </main>
    <BasicScripts />
    <style>
      .skip-to-main-content {
        @apply absolute left-[-9999px] z-100 bg-primary-800 p-6 text-white focus:left-0 focus:translate-x-1/2;
      }
    </style>
  </body>
</html>
