---
// import '@/assets/styles/base.css';
// import MetaTags from '~/components/common/MetaTags.astro';
import BasicScripts from '@/components/BasicScripts.astro';
// import { MetaSEO } from '~/types';
import { SITE } from '@/config.mjs';
// export interface Props {
//   meta?: MetaSEO;
// }
const { meta = {} } = Astro.props;
const { language = 'en-gb' } = SITE;
---

<!DOCTYPE html>
<html lang={language} dir="ltr">
  <head>
    <!-- <MetaTags {...meta} /> -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{SITE.title}</title>
    <meta name="description" content={SITE.description} />
    <!-- Umami Analytics -->
    {
      import.meta.env.PROD && (
        <script async defer data-website-id={SITE.umamiId} src="https://analytics.ddlawson.com/umami.js" />
      )
    }
  </head>

  <body class="min-h-full bg-white antialiased transition-colors duration-500 dark:bg-slate-900 dark:text-white">
    <slot />
    <BasicScripts />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
